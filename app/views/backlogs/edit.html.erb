<div class="form-wrapper">
  <h1>编辑待办事项</h1>

  <% if @backlog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@backlog.errors.count, "error") %> prohibited this backlog from being saved:</h2>

      <ul>
        <% @backlog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@backlog,:url => project_backlog_path(@project.id,@backlog.id)) do |f| %>
    <% if @backlog.description.blank? %>
      <div>
        <%= f.label '作为' %><br />
        <%= f.collection_select(:project_role_id,roles_for_project,:id,:role_name) %>
      </div>
      <div class="field">
        <%= f.label '可以' %><br />
        <%= f.text_field :what %>
      </div>
      <div class="field">
        <%= f.label '以便' %><br />
        <%= f.text_field :why %>
      </div>
    <% else %>
      <div class="field">
        <%= f.label '描述' %><br />
        <%= f.text_field :description %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label '故事点' %><br />
      <%= f.text_field :story_points %>
    </div>
    <div class="field">
      <%= f.label '实际故事点' %><br />
      <%= f.text_field :actual_story_points %>
    </div>
    <div class="field">
      <%= f.label '优先级' %><br />
      <%= f.text_field :level %>
    </div>
    <div class="field">
      <%= f.label '状态' %><br />
      <%= status_select %>
    </div>
    <div class="field">
      <%= f.label '验收条件' %><br />
      <%= f.text_area :inspection %>
    </div>
    <div class="actions">
      <%= f.submit '更新'%>
    </div>
  <% end %>
</div>
