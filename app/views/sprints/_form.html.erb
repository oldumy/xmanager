<%= form_for([sprint.release, sprint]) do |f| %>
  <div class="fields">
    <p>
      <label for="sprint_name"><%= t("labels.name") %></label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="sprint_estimated_started_on"><%= t("labels.estimated_started_on") %></label>
      <%= f.text_field :estimated_started_on %>
    </p>
    <p>
      <label for="sprint_estimated_closed_on"><%= t("labels.estimated_closed_on") %></label>
      <%= f.text_field :estimated_closed_on %>
    </p>
    <p>
      <label for="sprint_description"><%= t("labels.description") %></label>
      <%= f.text_area :description %>
    </p>
  </div>
  <div class="actions">
    <%= sexybutton(t("buttons.save")) do |b|
      b.image = 'save'
      b.type = 'submit'
    end %>
    <%= sexybutton(t("buttons.back"), project_project_plannings_path(sprint.release.project)) do |b|
      b.image = 'back'
    end %>
  </div>
<% end %>
