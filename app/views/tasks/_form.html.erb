<%= form_for([task.product_backlog, task]) do |f| %>
  <%= errors_of task %>
  <div class="fields">
    <p>
      <label for="task_name"><%= t("labels.name") %></label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="task_estimated_hours"><%= t("labels.estimated_hours") %></label>
      <%= f.text_field :estimated_hours%>
    </p>
    <p>
      <label for="task_team_member_id"><%= t("labels.assign_to") %></label>
      <%= f.collection_select(:team_member_id, task.product_backlog.project.team_members, :id, :name, :promote => true) %>
    </p>
    <p>
      <label for="task_description"><%= t("labels.description") %></label>
      <%= f.text_area :description %>
    </p>
  </div>
  <div class="actions">
    <p>
      <%= sexybutton(t("buttons.save")) do |b|
        b.type = 'submit'
        b.image = 'save'
      end %>
      <%= sexybutton(t("buttons.back"), on_air_project_sprints_path(task.product_backlog.project)) do |b|
        b.image = 'back'
      end %>
    </p>
  </div>
<% end %>

