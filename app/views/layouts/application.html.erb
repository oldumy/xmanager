<!DOCTYPE html>
<html lang='en' xml:lang='en' xmlns='http://www.w3.org/1999/xhtml'>
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <%= csrf_meta_tag %>
    <title><%= t("app.title") %></title>
    <%= stylesheet_link_tag :all %>
    <%= include_sexybuttons %>
    <%= include_jquery %>
    <%= include_jqueryrails %>
    <%= include_jqueryhighcharts %>
  </head>
  <body>
    <div id="wrapper">
      <div id="wrapper2">
        <div id="top-menu">
          <div id="account">
            <ul>
              <li>
                <% if current_user %>
                  <%=  link_to t("links.profile"), edit_user_path(@current_user)%>
                  <%=  link_to t("links.logout"), user_session_path, :method => 'delete'%>
                <%end %>
              </li>
            </ul>
          </div>
          <ul>
            <% if current_user %>
              <li><a href="/"><%= t("menus.homepage") %></a></li>
              <% unless current_user.administrators? %>
                <li><a href="/projects"><%= t("menus.projects") %></a></li>
              <% else %>
                <li><a href="/users"><%= t("menus.users") %></a></li>
              <% end %>
            <% end %>
          </ul>
        </div>
        <div id="header">
          <%= app_top_banner(@project) %>
          <%= yield :menus %>
        </div>
        <div id="content">
          <% if flash[:notice] %>
            <div id="notices"><%= flash[:notice] %></div>
          <% end %>
          <%= yield %>
        </div>
        <div id="footer">
          <%=raw t("app.copyright") %>
        </div>
      </div>
    </div>

  </body>
</html>
