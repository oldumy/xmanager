<%= form_for([release.project, release]) do |f| %>
  <%= errors_of(@release) %>
  <div class="fields">
    <p>
      <label for="release_name"><%= t("labels.name") %></label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="release_description"><%= t("labels.description") %></label>
      <%= f.text_area :description %>
    </p>
    <p>
      <label for="release_estimated_released_on"><%= t("labels.estimated_released_on") %></label>
      <%= f.text_field :estimated_released_on %>
    </p>
  </div>
  <div class="actions">
    <%= sexybutton(t("buttons.save")) do |b|
      b.type = 'submit'
      b.image = 'save'
    end %>
    <%= sexybutton(t("buttons.back"), project_project_plannings_path(release.project)) do |b|
      b.image = 'back'
    end %>
  </div>
<% end %>
