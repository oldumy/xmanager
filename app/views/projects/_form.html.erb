<%= form_for(project) do |f| %>
  <%= errors_of(project) %>
  <div class="fields">
    <p>
      <label for="project_name"><%= t("labels.name") %></label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="project_description"><%= t("labels.description") %></label>
      <%= f.text_area :description %>
    </p>
  </div>
  <div class="actions">
    <%= sexybutton(t("buttons.save")) do |b|
      b.id = 'project_submit'
      b.type = 'submit'
      b.image = 'save'
    end %>
    <%= sexybutton(t("buttons.back"), projects_path) do |b|
      b.image = 'back'
    end %>
  </div>
<% end %>
