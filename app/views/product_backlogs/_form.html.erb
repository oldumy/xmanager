<%= form_for([product_backlog.project, product_backlog]) do |f| %>
  <%= errors_of(product_backlog) %>
  <div class="fields">
    <p>
      <label for="product_backlog_name"><%= t("labels.name") %></label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="product_backlog_priority"><%= t("labels.priority") %></label>
      <%= f.text_field :priority%>
    </p>
    <p>
      <label for="product_backlog_estimated_story_points"><%= t("labels.estimated_story_points") %></label>
      <%= f.text_field :estimated_story_points %>
    </p>
    <p>
      <label for="product_backlog_description"><%= t("labels.description") %></label>
      <%= f.text_area :description %>
    </p>
    <p>
      <label for="product_backlog_acceptance_criteria"><%= t("labels.acceptance_criteria") %></label>
      <%= f.text_area :acceptance_criteria %>
    </p>
  </div>
  <div class="actions">
    <p>
      <%= sexybutton(t("buttons.save")) do |b|
        b.type = 'submit'
        b.image = 'save'
      end %>
      <%= sexybutton(t("buttons.back"), project_product_backlogs_path(product_backlog.project)) do |b|
        b.image = 'back'
      end %>
    </p>
  </div>
<% end %>

